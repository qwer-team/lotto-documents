{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Currency</h1>

    <table class="record_properties table table-bordered table-hover table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Ratetomain</th>
                <td>{{ entity.rateToMain }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        
    <a class="btn" href="{{ path('currency') }}" title="{% trans%}Back to the list{%endtrans%}">
           <i class="icon-list"> </i> 
        </a>
    
    <a class="btn btn-warning" href="{{ path('currency_edit', { 'id': entity.id }) }}" title="{% trans%}Edit{%endtrans%}">
            <i class="icon-edit icon-white"> </i>
        </a>
    
        <form action="{{ path('currency_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-primary" data-loading-text="Loading...">{% trans%}Delete{%endtrans%}</button>
        </form>
    
{% endblock %}
