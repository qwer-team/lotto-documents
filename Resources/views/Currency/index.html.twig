{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Currency list</h1>

    <table class="records_list table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Ratetomain</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('currency_show', { 'id': entity.id }) }}">{{ entity.code }}</a></td>
                <td>{{ entity.rateToMain }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('currency_show', { 'id': entity.id }) }}">{% trans%}show{%endtrans%}</a>
                    </li>
                    <li>
                        <a href="{{ path('currency_edit', { 'id': entity.id }) }}">{% trans%}edit{%endtrans%}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('currency_new') }}">
                {% trans%}Create a new entry{%endtrans%}
            </a>
        </li>
    </ul>
    {% endblock %}
