<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="currency" pattern="/">
        <default key="_controller">QwerLottoDocumentsBundle:Currency:index</default>
    </route>

    <route id="currency_show" pattern="/{id}/show">
        <default key="_controller">QwerLottoDocumentsBundle:Currency:show</default>
    </route>

    <route id="currency_new" pattern="/new">
        <default key="_controller">QwerLottoDocumentsBundle:Currency:new</default>
    </route>

    <route id="currency_create" pattern="/create">
        <default key="_controller">QwerLottoDocumentsBundle:Currency:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="currency_edit" pattern="/{id}/edit">
        <default key="_controller">QwerLottoDocumentsBundle:Currency:edit</default>
    </route>

    <route id="currency_update" pattern="/{id}/update">
        <default key="_controller">QwerLottoDocumentsBundle:Currency:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="currency_delete" pattern="/{id}/delete">
        <default key="_controller">QwerLottoDocumentsBundle:Currency:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
