<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="documenttype" pattern="/">
        <default key="_controller">QwerLottoDocumentsBundle:DocumentType:index</default>
    </route>

    <route id="documenttype_show" pattern="/{id}/show">
        <default key="_controller">QwerLottoDocumentsBundle:DocumentType:show</default>
    </route>

    <route id="documenttype_new" pattern="/new">
        <default key="_controller">QwerLottoDocumentsBundle:DocumentType:new</default>
    </route>

    <route id="documenttype_create" pattern="/create">
        <default key="_controller">QwerLottoDocumentsBundle:DocumentType:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="documenttype_edit" pattern="/{id}/edit">
        <default key="_controller">QwerLottoDocumentsBundle:DocumentType:edit</default>
    </route>

    <route id="documenttype_update" pattern="/{id}/update">
        <default key="_controller">QwerLottoDocumentsBundle:DocumentType:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="documenttype_delete" pattern="/{id}/delete">
        <default key="_controller">QwerLottoDocumentsBundle:DocumentType:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
