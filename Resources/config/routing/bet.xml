<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="bet" pattern="/">
        <default key="_controller">QwerLottoDocumentsBundle:Bet:index</default>
    </route>

    <route id="bet_show" pattern="/{id}/show">
        <default key="_controller">QwerLottoDocumentsBundle:Bet:show</default>
    </route>

    <route id="bet_new" pattern="/new">
        <default key="_controller">QwerLottoDocumentsBundle:Bet:new</default>
    </route>

    <route id="bet_create" pattern="/create">
        <default key="_controller">QwerLottoDocumentsBundle:Bet:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="bet_edit" pattern="/{id}/edit">
        <default key="_controller">QwerLottoDocumentsBundle:Bet:edit</default>
    </route>

    <route id="bet_update" pattern="/{id}/update">
        <default key="_controller">QwerLottoDocumentsBundle:Bet:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="bet_delete" pattern="/{id}/delete">
        <default key="_controller">QwerLottoDocumentsBundle:Bet:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
